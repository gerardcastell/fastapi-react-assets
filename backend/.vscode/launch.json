{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Python Debugger: FastAPI (Local)",
      "type": "debugpy",
      "request": "launch",
      "module": "uvicorn",
      "args": ["app.main:app", "--reload"],
      "jinja": true,
      "console": "integratedTerminal"
    },
    {
      "name": "Python Debugger: Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": ["tests/"],
      "console": "integratedTerminal"
    }
  ]
}
